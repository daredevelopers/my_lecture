= form_for(@course, html: { class: "form-horizontal"}) do |f|
  - if @course.errors.any?
    #error_explanation
      %h2
        = pluralize(@course.errors.count, "error")
        prohibited this course from being saved:
      %ul
        - @course.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    .col-sm-5
      = f.text_field :name, autofocus: true, class: "form-control", placeholder: "Course Name"
  .form-group
    .col-sm-offset-2.col-sm-5
      = f.submit "Create Course", class: "btn btn-primary"